<assembly>
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>

        <fileSet>
            <directory>bin/</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>deploy-config/</directory>
            <outputDirectory>deploy-config</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>package/</directory>
            <outputDirectory>linkis-package</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>release-docs/</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>../</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>README*</include>
                <include>DISCLAIMER*</include>
            </includes>
        </fileSet>

        <!--spark-->
        <fileSet>
            <directory>
                ../linkis-engineconn-plugins/spark/target/out/
            </directory>
            <outputDirectory>linkis-package/lib/linkis-engineconn-plugins/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!--hive-->
        <fileSet>
            <directory>
                ../linkis-engineconn-plugins/hive/target/out/
            </directory>
            <outputDirectory>linkis-package/lib/linkis-engineconn-plugins/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!--python-->
        <fileSet>
            <directory>
                ../linkis-engineconn-plugins/python/target/out/
            </directory>
            <outputDirectory>linkis-package/lib/linkis-engineconn-plugins/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!--shell-->
        <fileSet>
            <directory>
                ../linkis-engineconn-plugins/shell/target/out/
            </directory>
            <outputDirectory>linkis-package/lib/linkis-engineconn-plugins/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!--pipeline-->
        <fileSet>
            <directory>
                ../linkis-engineconn-plugins/pipeline/target/out/
            </directory>
            <outputDirectory>linkis-package/lib/linkis-engineconn-plugins/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!--lib-->
        <!--linkis-spring-cloud-services-->
        <!--linkis-gateway-->
        <fileSet>
            <directory>
                ../linkis-spring-cloud-services/linkis-service-gateway/linkis-gateway-server-support/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-spring-cloud-services/linkis-mg-gateway
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!--linkis-eureka-->
        <fileSet>
            <directory>
                ../linkis-spring-cloud-services/linkis-service-discovery/linkis-eureka/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-spring-cloud-services/linkis-mg-eureka
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!--lib-->
        <!--linkis-commons-->
        <!--public-module-->
        <fileSet>
            <directory>
                public-module-combined/target/out/lib
            </directory>
            <outputDirectory>linkis-package/lib/linkis-commons/public-module/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!--lib-->
        <!--linkis-computation-governance-->
        <!--linkis-ec-manager-->
        <fileSet>
            <directory>
                ../linkis-computation-governance/linkis-engineconn-manager/linkis-engineconn-manager-server/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-computation-governance/linkis-cg-engineconnmanager
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!--application-manager-->
        <fileSet>
            <directory>
                ../linkis-computation-governance/linkis-manager/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-computation-governance/linkis-cg-linkismanager
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>


        <!--entrance-->
        <fileSet>
            <directory>
                ../linkis-computation-governance/linkis-entrance/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-computation-governance/linkis-cg-entrance
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!--linkis-cli-->
        <fileSet>
            <directory>
                ../linkis-computation-governance/linkis-client/linkis-cli/linkis-cli-application/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-computation-governance/linkis-client/linkis-cli
            </outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <!--lib-->
        <!--linkis-public-enhancements-->
        <fileSet>
            <directory>
                ../linkis-public-enhancements/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-public-enhancements/linkis-ps-publicservice
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- hive metadata query -->
        <fileSet>
            <directory>
                ../linkis-public-enhancements/linkis-datasource/linkis-metadata-query/service/hive/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-public-enhancements/linkis-ps-metadataquery/service/hive
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- mysql metadata query -->
        <fileSet>
            <directory>
                ../linkis-public-enhancements/linkis-datasource/linkis-metadata-query/service/mysql/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-public-enhancements/linkis-ps-metadataquery/service/mysql
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- kafka metadata query -->
        <fileSet>
            <directory>
                ../linkis-public-enhancements/linkis-datasource/linkis-metadata-query/service/kafka/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-public-enhancements/linkis-ps-metadataquery/service/kafka
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- elasticsearch metadata query -->
        <fileSet>
            <directory>
                ../linkis-public-enhancements/linkis-datasource/linkis-metadata-query/service/elasticsearch/target/out/lib
            </directory>
            <outputDirectory>
                linkis-package/lib/linkis-public-enhancements/linkis-ps-metadataquery/service/elasticsearch
            </outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>linkis-package/lib/linkis-commons/public-module/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <useStrictFiltering>false</useStrictFiltering>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <excludes>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>
